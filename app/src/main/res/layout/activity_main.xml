<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <HorizontalScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginLeft="0dp"
        android:paddingLeft="0dp"
        >

        <!-- Carousel items container - lays out items horizontally -->
        <LinearLayout android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp"
            android:background="@color/material_blue_grey_800"
            />
        <!-- android:paddingLeft="160dp"
            android:paddingRight="160dp" -->

    </HorizontalScrollView>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/button_material_dark"
        android:padding="0dp"
        >
        <ImageButton
            android:layout_height="match_parent"
            android:id="@+id/button_absent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_close_white_48dp"/>
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:id="@+id/button"
            android:src="@drawable/ic_more_vert_white_48dp"
            />

        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:id="@+id/button_present"
            android:src="@drawable/ic_check_white_48dp"/>


    </LinearLayout>

</RelativeLayout>
