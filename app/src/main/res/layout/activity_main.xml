<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:textColor="@color/actionbar_text"
        android:background="@color/actionbar"
        android:gravity="center_vertical"
        android:id="@+id/action_bar2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9.20am Tuesday 21 January"
            android:id="@+id/registerDate"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
             />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="14/20"
                android:id="@+id/headCount"
                android:gravity="center_vertical"
                android:paddingRight="14dp"
                />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout android:orientation="horizontal"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/actionbar"
        android:id="@+id/button_bar"
        android:padding="0dp"
        >
        <ImageButton
            android:layout_height="match_parent"
            android:id="@+id/button_absent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="20dp"
            android:onClick="markAbsent"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/ic_close_white_24dp"/>
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:id="@+id/button"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/ic_more_vert_white_24dp"
            />

        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:id="@+id/button_present"
            android:onClick="markPresent"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/ic_check_white_24dp"/>


    </LinearLayout>

    <uk.co.samjking.register.PhotoContainer
        android:id="@+id/photo_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:layout_below="@id/action_bar2"
        android:layout_above="@id/button_bar"
        android:layout_gravity="center_vertical">
        <android.support.v4.view.ViewPager
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal" />
    </uk.co.samjking.register.PhotoContainer>

</RelativeLayout>
